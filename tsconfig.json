{
    "compilerOptions": {
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "typeRoots": ["types"],
        "baseUrl": ".",
        "paths": {
            "#data/*": ["data/*"],
            "#components/*": ["components/*"],
            "#utils/*": ["utils/*"],
            "#api/*": ["pages/api/*"],
            "#locales/*": ["locales/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js",
        ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"],
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS",
            "paths": {
                "#data/*": ["data/*"],
                "#utils/*": ["utils/*"]
            }
        },
        "require": ["tsconfig-paths/register"]
    }
}
